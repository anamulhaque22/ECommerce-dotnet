
@{
    ViewBag.Title = "Create";
    ViewBag.HeadingTitle = "Product List";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <table class="table table-success table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <th class="align-middle" scope="row">@c.Id</th>
                    <td class="align-middle">@c.Title</td>
                    <td class="align-middle"><img src="~/Content/Product/@c.Image" alt="@c.Title" width="80" /></td>
                    <td class="align-middle">@c.Price</td>
                    <td class="align-middle">@c.Category.Name</td>
                    <td class="align-middle">
                        <a class="me-2" href="edit/@c.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="ms-2" href="Delete/@c.Id">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

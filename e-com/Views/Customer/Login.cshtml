
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <form method="post" action="" class="shadow-lg p-4 mb-5 bg-body-tertiary rounded" style="min-width: 400px">
            <h2 class="text-center mb-3">Login</h2>

            <div class="form-group mb-3">
                <label class="form-label" for="email">Email</label>
                <input type="text" name="Email" class="form-control" id="eamil" placeholder="Email">
            </div>

            <div class="form-group mb-3">
                <label class="form-label" for="password">Password</label>
                <input type="password" name="Password" class="form-control" id="password" placeholder="Password">
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <p class="text-center mt-3">Don't have an account? @Html.ActionLink("Register", "Registration", "Customer", new {area = ""})</p>
            <p class="mb-4 text-danger fw-bold text-center">@ViewBag.Notification</p>
        </form>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>


@{
    ViewBag.Title = "Order List";
    ViewBag.HeadingTitle = "Order List";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <table class="table table-success table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Order Id</th>
                <th scope="col">Customer Info</th>
                <th scope="col">Total Price</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <th class="align-middle" scope="row">@c.Id</th>
                    <td class="align-middle">
                        <p class="mb-0">@c.Customer.Name</p>
                        <p class="mb-0">@c.Customer.Phone</p>
                    </td>

                    <td class="align-middle">@c.TotalAmount</td>
                    <td class="align-middle">@c.OrderStatus</td>
                    <td class="align-middle">
                        <a class="btn btn-primary" href="@Url.Action("ChangeOrderStatus", "Cart", new { @orderId = c.Id })">Change Staus</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
